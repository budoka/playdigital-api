  "components": {
    "schemas": {
      "Currency": {
        "properties": {
          "name": {
            "type": "string"
          },
          "symbol": {
            "minLength": 3,
            "maxLength": 3,
            "type": "string"
          }
        },
        "type": "object",
        "required": ["name", "symbol"]
      },
      "User": {
        "properties": {
          "firstname": {
            "type": "string"
          },
          "lastname": {
            "type": "string"
          },
          "username": {
            "type": "string"
          },
          "password": {
            "pattern": "^[0-9a-zA-Z]+$",
            "type": "string",
            "minLength": 8
          },
          "currencyId": {
            "format": "uuid",
            "type": "string"
          }
        },
        "type": "object",
        "required": ["firstname", "lastname", "username", "password", "currencyId"]
      },
      "Cryptocurrency": {
        "properties": {
          "name": {
            "type": "string"
          },
          "symbol": {
            "minLength": 3,
            "maxLength": 3,
            "type": "string"
          },
          "price": {
            "format": "currency",
            "type": "string"
          },
          "url": {
            "format": "url",
            "type": "string"
          }
        },
        "type": "object",
        "required": ["name", "symbol", "price", "url"]
      },
      "UserLogin": {
        "properties": {
          "username": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        },
        "type": "object",
        "required": ["username", "password"]
      },
      "CryptocurrencyUser": {
        "properties": {
          "cryptocurrency": {
            "type": "string"
          },
          "username": {
            "type": "string"
          }
        },
        "type": "object",
        "required": ["cryptocurrency", "username"]
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
